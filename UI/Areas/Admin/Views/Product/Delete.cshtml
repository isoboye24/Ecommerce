@model Product

<div class="card shadow border-0 mt-0 py-3">
    <div class="card-header bg-primary bg-gradient shadow border-0 mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>


    <div class="card-body p-4">
        <form method="post">
            <input asp-for="ID" hidden />
            <div class="border p-3 my-4">
                <div class="form-floating py-2 col-12">
                    <label asp-for="Title" class="ms-2"></label>
                    <input asp-for="Title" type="text" class="border-0 shadow form-control" />                    
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Description" class="ms-2"></label>
                    <textarea asp-for="Description" type="text" class="border-0 shadow form-control" ></textarea>
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ISBN" class="ms-2"></label>
                    <input asp-for="ISBN" type="text" class="border-0 shadow form-control" />                    
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Author" class="ms-2"></label>
                    <input asp-for="Author" type="text" class="border-0 shadow form-control" />                    
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <input asp-for="ListPrice" type="text" class="border-0 shadow form-control" />                    
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price" class="ms-2"></label>
                    <input asp-for="Price" type="text" class="border-0 shadow form-control" />                    
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price50" class="ms-2"></label>
                    <input asp-for="Price50" type="text" class="border-0 shadow form-control" />                    
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price100" class="ms-2"></label>
                    <input asp-for="Price100" type="text" class="border-0 shadow form-control" />                    
                    <hr />
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}