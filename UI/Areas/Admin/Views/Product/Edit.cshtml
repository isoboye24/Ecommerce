@model Product

<div class="card shadow border-0 mt-0 py-3">
    <div class="card-header bg-primary bg-gradient shadow border-0 mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>


    <div class="card-body p-4">
        <form method="post">
            <input asp-for="ID" hidden />
            <div class="border p-3 my-4">
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Title" class="ms-2">Product Name</label>
                    <input asp-for="Title" type="text" class="border-0 shadow form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Description" class="ms-2">Description</label>
                    <textarea asp-for="Description" type="text" class="border-0 shadow form-control" /></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ISBN" class="ms-2">ISBN</label>
                    <input asp-for="ISBN" type="text" class="border-0 shadow form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Author" class="ms-2">Author</label>
                    <input asp-for="Author" type="text" class="border-0 shadow form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ListPrice" class="ms-2">ListPrice</label>
                    <input asp-for="ListPrice" type="text" class="border-0 shadow form-control" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price" class="ms-2">Price</label>
                    <input asp-for="Price" type="text" class="border-0 shadow form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price50" class="ms-2">Price50</label>
                    <input asp-for="Price50" type="text" class="border-0 shadow form-control" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price100" class="ms-2">Price100</label>
                    <input asp-for="Price100" type="text" class="border-0 shadow form-control" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                    <hr />
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back To List</a>
                    </div>
                </div>            
            </div>            
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}