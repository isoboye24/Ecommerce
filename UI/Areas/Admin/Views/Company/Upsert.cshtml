@model Company

<div class="card shadow border-0 mt-0 py-3">
    <div class="card-header bg-primary bg-gradient shadow border-0 mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.CompanyID != 0 ? "Update":"Create") Company</h2>
            </div>
        </div>
    </div>


    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="CompanyID" hidden />
            
            <div class="row">
                <div class="col-12">
                    <div class="border p-3 my-4">
                        @* <div asp-validation-summary="All"></div> *@
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Name" class="ms-2"></label>
                            <input asp-for="Name" type="text" class="border-0 shadow form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <hr />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="StreetAddress" class="ms-2"></label>
                            <input asp-for="StreetAddress" type="text" class="border-0 shadow form-control" />
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                            <hr />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="City" class="ms-2"></label>
                            <input asp-for="City" type="text" class="border-0 shadow form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                            <hr />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="State" class="ms-2"></label>
                            <input asp-for="State" type="text" class="border-0 shadow form-control" />
                            <span asp-validation-for="State" class="text-danger"></span>
                            <hr />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="PostalCode" class="ms-2"></label>
                            <input asp-for="PostalCode" type="text" class="border-0 shadow form-control" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                            <hr />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="PhoneNumber" class="ms-2"></label>
                            <input asp-for="PhoneNumber" type="text" class="border-0 shadow form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            <hr />
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.CompanyID != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border form-control">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>                
            </div>
           
        </form>
    </div>
</div>

@section Scripts {    
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}